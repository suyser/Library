<Window x:Class="Library.Views.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить пользователя" Height="400" Width="400">
    <Grid Margin="0,0,0,-28">
        <TextBlock Text="Полное имя:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0"/>
        <TextBox Name="FullNameTextBox" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="20,40,20,0" Height="30"/>

        <TextBlock Text="Роль:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,80,0,0"/>
        <ComboBox Name="RoleComboBox" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="20,100,20,0" Height="30">
            <ComboBoxItem Content="Читатель"/>
            <ComboBoxItem Content="Администратор"/>
        </ComboBox>

        <TextBlock Text="Пароль:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,140,0,0"/>
        <PasswordBox Name="PasswordBox" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="20,160,20,0" Height="30"/>

        <TextBlock Text="Подтверждение пароля:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,200,0,0"/>
        <PasswordBox Name="ConfirmPasswordBox" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="20,220,20,0" Height="30"/>

        <Button Content="Добавить" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,270,0,0" Click="AddUserButton_Click"/>
    </Grid>
</Window>
