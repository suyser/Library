<Window x:Class="Library.Views.BooksInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.Views"
        mc:Ignorable="d"
        Title="BooksInfoWindow" Height="450" Width="800">
    <Grid>
        <ListView Name="BooksInfoListView" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Book_Info_ID}" Width="50"/>
                    <GridViewColumn Header="Название" DisplayMemberBinding="{Binding Name}" Width="200"/>
                    <GridViewColumn Header="Автор" DisplayMemberBinding="{Binding Author}" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>