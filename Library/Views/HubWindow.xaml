<Window x:Class="Library.Views.HubWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hub" Height="400" Width="400">
    <Grid Margin="0,0,0,-52">
        <Button Content="Экземпляры книг" VerticalAlignment="Top" HorizontalAlignment="Center"
        Width="200" Height="50" Margin="0,83,0,0" Click="BooksButton_Click"/>
        <Button Content="Доступные книги" VerticalAlignment="Top" HorizontalAlignment="Center" Width="200" Height="50" Margin="0,248,0,0" Click="AvailableBooksButton_Click"/>
        <Button Content="Добавить пользователя" VerticalAlignment="Top" HorizontalAlignment="Center" Width="200" Height="50" Margin="0,313,0,0" Click="AddUserButton_Click"/>
        <Button Content="Пользователи" VerticalAlignment="Top" HorizontalAlignment="Center" Width="200" Height="50" Click="UsersButton_Click" Margin="0,138,0,0"/>
        <Button Content="Книги информация" VerticalAlignment="Top" HorizontalAlignment="Center" Width="200" Height="50" Margin="0,28,0,0" Click="BooksInfoButton_Click"/>
        <Button Content="Аренда книг" VerticalAlignment="Top" HorizontalAlignment="Center" Width="200" Height="50" Margin="0,193,0,0" Click="RentedBooksButton_Click"/>
        <!-- Добавьте другие кнопки для навигации по другим окнам -->
    </Grid>
</Window>
