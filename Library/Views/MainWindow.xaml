<Window x:Class="Library.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Library" Height="300" Width="400">
    <Grid>
        <TextBlock Text="Имя пользователя:" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,40,0,0"/>
        <TextBox Name="UsernameTextBox" Width="200" Height="30" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,70,0,0"/>

        <TextBlock Text="Пароль:" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,110,0,0"/>
        <PasswordBox Name="PasswordBox" Width="200" Height="30" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,140,0,0"/>

        <Button Content="Войти" Width="100" Height="30" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,190,0,0" Click="LoginButton_Click"/>
    </Grid>
</Window>
